{
  "manifest_version": 3,
  "name": "SiteBlocker",
  "description": "Extension to block sites that waste time",
  "version": "1.0",
  "action": {
    "default_popup": "block-website.html",
    "default_icon": "block-website.jpeg"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ]
}
